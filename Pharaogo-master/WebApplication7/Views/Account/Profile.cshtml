@model WebApplication7.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "User Profile";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>My Profile</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" class="form-control" value="@Model.UserName" readonly />
                    </div>
                    <div class="form-group mt-3">
                        <label>Email</label>
                        <input type="email" class="form-control" value="@Model.Email" readonly />
                    </div>

                    @if (User.IsInRole("Admin"))
                    {
                        <div class="alert alert-info mt-3">
                            You have administrator privileges.
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div> 